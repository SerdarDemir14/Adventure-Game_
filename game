# imports
import time
import random


# Start Game
def_start_game():
valid = True
while valid
print("Welcome to the adventure game!")
print("Please pick one of the following options:")
print("a -> start")
print("b -> exit")
option = input("Please make a choice:").lower()
if option == "a":
print("You have selected to play the game")
elif option == "b":
print"Good Bye!")
else:
print("Please make a valid choice")

start_game()
